if [[ $hostname = "speedbook.home.jay.fm" ]] then
  alias eab="open -W ~/.zshrc.tmproj"
else
  alias eab="echo Do this from speedbook!"
  function pullab ()
    {
      cp ~/.zshrc ~/.zshrc.old
      for file in `find ~/.zshrc.d -type f`
      do
        cp $file $file.old
      done

      scp speedbook:.zshrc ~/.zshrc
      scp -r speedbook:.zshrc.d ~
      rm ~/.zshrc.d/.DS_Store
      uan
    }
fi

alias uan=". ~/.zshrc"

